@model Meal

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Dodaj nowe danie</h2>
            <hr/>
        </div>
        <div class="mb-3" >
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CityAvailability"></label>
            <input asp-for="CityAvailability" class="form-control" />
            <span asp-validation-for="CityAvailability" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Calories"></label>
            <input asp-for="Calories" class="form-control" type="number" step=".01" min="0" value="0" />
            <span asp-validation-for="Calories" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Weight" ></label>
            <input asp-for="Weight" class="form-control" type="number" step=".01" min="0" value="0" />
            <span asp-validation-for="Weight" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input type="file" name="file" class="form-control" accept="image/*"/>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="MealPrice" ></label>
            <input asp-for="MealPrice" class="form-control" type="number" step=".01" min="0" value="0" />
            <span asp-validation-for="MealPrice" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px" >Dodaj</button>
        <a asp-controller="Meal" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Wróć
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
